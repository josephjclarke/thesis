author = {Wiltshire, Andrew J. and Burke, Eleanor J. and Chadburn, Sarah E. and Jones, Chris D. and Cox, Peter M. and Davies-Barnard, Taraka and Friedlingstein, Pierre and Harper, Anna B. and Liddicoat, Spencer and Sitch, Stephen and Zaehle, S{\"{o}}nke},
doi = {10.5194/gmd-14-2161-2021},
file = {:home/links/jc1147/Downloads/gmd-14-2161-2021.pdf:pdf},
