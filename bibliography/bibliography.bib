file = {:home/links/jc1147/Downloads/Plant Cell Environment - 2007 - SAGE - The temperature response of C3 and C4 photosynthesis.pdf:pdf},
issn = {01407791},
journal = {Plant, Cell {\&} Environment},
keywords = {Acclimation,CO2 and temperature interactions,Electron transport,Global change,Rubisco,Rubisco activase},
month = sep,
number = {9},
pages = {1086--1106},
pmid = {17661749},
title = {{The temperature response of C3 and C4 photosynthesis}},
url = {https://onlinelibrary.wiley.com/doi/10.1111/j.1365-3040.2007.01682.x},
volume = {30},
