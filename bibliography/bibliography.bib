month = dec,
number = {4},
pages = {449--457},
publisher = {Springer Science and Business Media B.V.},
title = {{Critical speeding up as an early warning signal of stochastic regime shifts}},
url = {http://link.springer.com/10.1007/s12080-020-00451-0},
volume = {13},
year = {2020}
}
