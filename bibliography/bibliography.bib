issn = {1752-0894},
journal = {Nature Geoscience},
keywords = {Ecosystem ecology,Tropical ecology},
month = mar,
number = {3},
pages = {174--179},
publisher = {Nature Publishing Group},
title = {{Higher resilience to climatic disturbances in tropical vegetation exposed to more variable rainfall}},
url = {http://www.nature.com/articles/s41561-019-0312-z https://www.nature.com/articles/s41561-019-0312-z},
volume = {12},
